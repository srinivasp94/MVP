<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DummyActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/dummyviewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/viewcolor"
        android:visibility="gone">

    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp">

        <ImageView
            android:id="@+id/img_Close"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentTop="true"
            android:padding="@dimen/_3sdp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@color/black" />

        <com.iprismech.alertnikki.customviews.CustomTextViewBold
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="Service Details"
            android:textSize="@dimen/_16sdp" />
    </RelativeLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical"
        android:padding="@dimen/_3sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_8sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_deliveryBoy_pic"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/dummy" />

            <com.iprismech.alertnikki.customviews.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@+id/img_deliveryBoy_pic"
                android:paddingLeft="@dimen/_5sdp"
                android:text="Add Picture"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <com.iprismech.alertnikki.customviews.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="*Name"
                android:textColor="@color/colorPrimary" />

            <com.iprismech.alertnikki.customviews.CustomEditTextNormal
                android:id="@+id/edt_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Name"
                android:inputType="text"
                android:singleLine="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@color/backgroundlight" />

            <com.iprismech.alertnikki.customviews.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="*Mobile"
                android:textColor="@color/colorPrimary" />

            <com.iprismech.alertnikki.customviews.CustomEditTextNormal
                android:id="@+id/edt_Mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="000-000-0000"
                android:inputType="number"
                android:maxLength="10"
                android:singleLine="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@color/backgroundlight" />

            <com.iprismech.alertnikki.customviews.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:padding="@dimen/_2sdp"
                android:text="*Delivery/Service From"
                android:textColor="@color/colorPrimary" />


            <com.iprismech.alertnikki.customviews.CustomEditTextNormal
                android:id="@+id/edt_DeliveryFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Name"
                android:inputType="text"
                android:editable="false"
                android:focusable="false"
                android:singleLine="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@color/backgroundlight" />

            <com.iprismech.alertnikki.customviews.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:padding="@dimen/_2sdp"
                android:text="If they have any vehicle? Please enter details(optional)"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">


                <com.iprismech.alertnikki.customviews.CustomEditTextNormal
                    android:id="@+id/edt_vehicle_first"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:background="@drawable/vehiclenum_bgr"
                    android:elevation="@dimen/_2sdp"
                    android:gravity="center"
                    android:hint="AP"
                    android:imeOptions="actionNext"
                    android:inputType="textCapCharacters"
                    android:maxLength="2"
                    android:padding="@dimen/_1sdp"
                    android:singleLine="true"
                    android:textAllCaps="true" />

                <com.iprismech.alertnikki.customviews.CustomEditTextNormal
                    android:id="@+id/edt_vehicle_one"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:background="@drawable/vehiclenum_bgr"
                    android:elevation="@dimen/_2sdp"
                    android:gravity="center"
                    android:hint="30"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="2"
                    android:padding="@dimen/_1sdp"
                    android:singleLine="true" />

                <com.iprismech.alertnikki.customviews.CustomEditTextNormal
                    android:id="@+id/edt_vehicle_two"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:background="@drawable/vehiclenum_bgr"
                    android:elevation="@dimen/_2sdp"
                    android:gravity="center"
                    android:hint="CD"
                    android:imeOptions="actionNext"
                    android:inputType="textCapCharacters"
                    android:maxLength="2"
                    android:padding="@dimen/_1sdp"
                    android:singleLine="true"
                    android:textAllCaps="true" />

                <com.iprismech.alertnikki.customviews.CustomEditTextNormal
                    android:id="@+id/edt_vehicle_three"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:background="@drawable/vehiclenum_bgr"
                    android:elevation="@dimen/_2sdp"
                    android:gravity="center"
                    android:hint="0000"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="@dimen/_1sdp"
                    android:singleLine="true" />
            </LinearLayout>

        </LinearLayout>

        <com.iprismech.alertnikki.customviews.CustomTextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/backgroundlight"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="Resident Details"
            android:textSize="@dimen/_15sdp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">


            <LinearLayout
                android:id="@+id/ll_building_delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">

                <com.iprismech.alertnikki.customviews.CustomTextViewBold
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="* Building Name:"
                    android:textColor="#e62d40" />

                <com.iprismech.alertnikki.customviews.CustomTextViewBold
                    android:id="@+id/tv_building_name_delivery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="0.1"
                    android:src="@drawable/bg_spinner" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#c6bfc6">

            </View>

            <LinearLayout
                android:id="@+id/ll_flatno_delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">

                <com.iprismech.alertnikki.customviews.CustomTextViewBold
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="* Flat No:"
                    android:textColor="#e62d40" />

                <com.iprismech.alertnikki.customviews.CustomTextViewBold
                    android:id="@+id/tv_flat_number_delivery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="0.1"
                    android:src="@drawable/bg_spinner" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@color/backgroundlight" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_sendnotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/black_button_bgr"
            android:padding="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:text="Send Notify"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>
</ScrollView>

</LinearLayout>