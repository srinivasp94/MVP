<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:elevation="@dimen/_1sdp"
    android:background="@color/white"
    android:layout_margin="@dimen/_4sdp"
    android:padding="@dimen/_3sdp"
    android:weightSum="1.5">

    <!--<LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="0.5">-->

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:padding="@dimen/_4sdp"
            android:src="@mipmap/ic_launcher" />
    <!--</LinearLayout>-->

    <LinearLayout
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.iprismech.alertnikki.customviews.CustomTextViewBold
            android:id="@+id/txt_title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GusetName"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />

        <com.iprismech.alertnikki.customviews.CustomTextViewLight
            android:id="@+id/txt_gusetType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guset"
            android:textSize="@dimen/_12sdp" />


        <com.iprismech.alertnikki.customviews.CustomTextViewLight
            android:id="@+id/txt_AddressFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guset"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_3sdp">

        <com.iprismech.alertnikki.customviews.CustomTextViewLight
            android:id="@+id/txt_timeSince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="00Hr10Min"
            android:textColor="@color/green"
            android:textSize="@dimen/_12sdp" />

        <Button
            android:id="@+id/btn_out"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:background="@drawable/red_button_bgr"
            android:padding="@dimen/_4sdp"
            android:text="out"
            android:elevation="@dimen/_1sdp"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>