<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:elevation="@dimen/_1sdp"
    android:padding="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/ll_rootVisitor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:padding="@dimen/_1sdp"
                android:src="@drawable/dummy" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.iprismech.alertnikki.customviews.CustomTextViewBold
                android:id="@+id/txt_title_name_inside"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GusetName"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <com.iprismech.alertnikki.customviews.CustomTextViewNormal
                android:id="@+id/txt_gusetType_indise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guset"
                android:textColor="@color/lighttextcolor"
                android:textSize="@dimen/_10sdp" />
            <com.iprismech.alertnikki.customviews.CustomTextViewBold
                android:id="@+id/txt_invitedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:text="Invited By"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <com.iprismech.alertnikki.customviews.CustomTextViewBold
                android:id="@+id/txt_invitedBy_inside"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:text="GusetName"
                android:textColor="@color/lighttextcolor"
                android:textSize="@dimen/_12sdp" />

            <com.iprismech.alertnikki.customviews.CustomTextViewNormal
                android:id="@+id/txt_AddressFrom_inside"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guset"
                android:textColor="#a9a8a8"
                android:visibility="gone"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:padding="@dimen/_3sdp">

            <com.iprismech.alertnikki.customviews.CustomTextViewLight
                android:id="@+id/txt_timeSince_inside"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="00Hr10Min"
                android:textColor="@color/green"
                android:textSize="@dimen/_11sdp" />

            <com.iprismech.alertnikki.customviews.CustomTextViewBold
                android:id="@+id/btn_out_inside"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:background="@drawable/red_button_bgr"
                android:gravity="center"
                android:padding="@dimen/_1sdp"
                android:text="OUT"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>