<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    android:background="@color/white"
    android:elevation="@dimen/_1sdp"
    android:orientation="horizontal"
    android:padding="@dimen/_3sdp"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.4"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_school"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/school" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.iprismech.alertnikki.customviews.CustomTextViewBold
            android:id="@+id/txt_title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GusetName"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />

        <com.iprismech.alertnikki.customviews.CustomTextViewLight
            android:id="@+id/txt_addressSchool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guset"
            android:textSize="@dimen/_10sdp" />


        <com.iprismech.alertnikki.customviews.CustomTextViewLight
            android:id="@+id/txt_Route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guset"
            android:textSize="@dimen/_11sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:gravity="center"

        android:orientation="vertical"
        android:padding="@dimen/_3sdp">

        <com.iprismech.alertnikki.customviews.CustomTextViewLight
            android:id="@+id/txt_timeSince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:text="00Hr10Min"
            android:textColor="@color/green"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_out"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_28sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:background="@drawable/red_button_bgr"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="out"
            android:elevation="@dimen/_1sdp"
            android:textColor="@color/white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_notify"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/ic_notifications_none_black_24dp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>