            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/ll_building_delivery"
                android:orientation="horizontal">
                <com.iprismech.alertnikki.customviews.CustomTextViewBold
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="* Building Name:"
                    android:layout_weight="0.5"
                    android:textColor="#e62d40" />
                <com.iprismech.alertnikki.customviews.CustomTextViewBold
                    android:layout_width="0dp"
                    android:id="@+id/tv_building_name_delivery"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="0.5"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/bg_spinner" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#c6bfc6">

            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/ll_flatno_delivery"
                android:orientation="horizontal">
                <com.iprismech.alertnikki.customviews.CustomTextViewBold
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="* Flat No:"
                    android:layout_weight="0.5"
                    android:textColor="#e62d40" />
                <com.iprismech.alertnikki.customviews.CustomTextViewBold
                    android:layout_width="0dp"
                    android:id="@+id/tv_flat_number_delivery"
                    android:layout_height="wrap_content"
                    android:text=""
