<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_header"></include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rview_myflats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <com.iprismech.alertnikkiresidence.customviews.CustomTextViewNormal
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/black_corner_bg"
        android:gravity="center"
        android:paddingVertical="@dimen/_8sdp"
        android:text="+ Add Flat"
        android:textColor="@color/white"
        android:id="@+id/tv_add_flat"
        android:textSize="@dimen/_13sdp" />
</LinearLayout>