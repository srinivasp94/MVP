<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_5sdp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp">

    <android.support.v7.widget.AppCompatTextView
        style="@style/DefaultCustomTextView"
        android:layout_below="@+id/viewContact"
        android:gravity="center"
        android:text="I'm Inviting (Please Select one)"
        android:textSize="@dimen/_13sdp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/viewContact"
        style="@style/DefaultCustomTextView"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/red_corner_bg"
        android:gravity="center"
        android:text="Contacts"
        android:drawablePadding="@dimen/_10sdp"
        android:drawableLeft="@drawable/contact_book"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/viewOthers"
        style="@style/DefaultCustomTextView"
        android:layout_below="@+id/viewContact"
        android:drawablePadding="@dimen/_10sdp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:drawableLeft="@drawable/three_dots"
        android:text="Others"
        android:textSize="@dimen/_13sdp" />

    <android.support.v7.widget.AppCompatTextView
        style="@style/DefaultCustomTextView"
        android:layout_below="@+id/viewContact"
        android:gravity="center"
        android:text="Once invited your Visitor will receive an SMS.Invite  with OTP for hassel-free entry at society Gate"
        android:textSize="@dimen/_11sdp" />

</LinearLayout>