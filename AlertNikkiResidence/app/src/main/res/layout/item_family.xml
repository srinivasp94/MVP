<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgfamilyPic"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_contact" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/imgDelete"
            android:layout_toRightOf="@+id/imgfamilyPic"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtFamilyName"
                style="@style/ItemDefaultCustomTextView"
                android:text="Name"
                android:textSize="@dimen/_13sdp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtFamilyphn"
                style="@style/ItemDefaultCustomTextView"
                android:text="Mobile"
                android:textSize="@dimen/_10sdp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtFamilyRelation"
                style="@style/ItemDefaultCustomTextView"
                android:text="Mother"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgDelete"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_4sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_delete" />

    </RelativeLayout>
</LinearLayout>