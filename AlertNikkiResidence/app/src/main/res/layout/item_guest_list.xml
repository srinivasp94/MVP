<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardCornerRadius="@dimen/_5sdp"
    app:cardUseCompatPadding="true">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgGuestPic"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_3sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/dummy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@+id/imgGuestPic"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/_4sdp">

            <com.iprismech.alertnikkiresidence.customviews.CustomTextViewBold
                android:id="@+id/txtGuestName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peter Cruiser"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <com.iprismech.alertnikkiresidence.customviews.CustomTextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guest"
                android:textSize="@dimen/_10sdp" />

            <com.iprismech.alertnikkiresidence.customviews.CustomTextViewLight
                android:id="@+id/txtGuestArrivingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arriving on   03,Feb,Wednesday" />

            <com.iprismech.alertnikkiresidence.customviews.CustomTextViewLight
                android:id="@+id/txtVehicleNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle - AP31SD1234"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/imgCallGuest"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/green"
                android:gravity="center"
                android:padding="@dimen/_2sdp">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_call" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/imgGuestEdit"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/yello"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_2sdp">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ic_reload"
                    android:tint="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/imgDeleteGuest"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_2sdp">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_delete"
                    android:tint="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>