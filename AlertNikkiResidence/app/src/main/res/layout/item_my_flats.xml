<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/home_small" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_flat_name"
                style="@style/ItemDefaultCustomTextView"
                android:text="101,Ayyappa Society"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_tenant"
                style="@style/ItemDefaultCustomTextView"
                android:text="Residing as tenant"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_flat_delete"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_delete" />
    </LinearLayout>
</LinearLayout>