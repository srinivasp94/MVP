<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.profile.AddVehicleActivity">

    <include layout="@layout/common_header" />

    <ListView
        android:id="@+id/txtVehicls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp">


        <LinearLayout
            android:id="@+id/layoutaddVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/circular_bgr">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtAddVehicle"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="+"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_24sdp" />
    </LinearLayout>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtsubmitVehicle"
        style="@style/ItemDefaultCustomTextView"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/black_corner_bg"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />

</LinearLayout>