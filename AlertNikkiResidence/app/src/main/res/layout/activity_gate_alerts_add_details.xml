<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/contactus_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:background="#e20d2d">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/leftarrow_white" />

                <com.iprismech.alertnikkiresidence.customviews.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Add Details"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <com.iprismech.alertnikkiresidence.customviews.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Service Type"
            android:textColor="@color/colorPrimaryDark" />

        <com.iprismech.alertnikkiresidence.customviews.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"

            android:layout_marginTop="@dimen/_5sdp"
            android:text="Delivery" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/_10sdp"

            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/graylight"></View>

        <com.iprismech.alertnikkiresidence.customviews.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"

            android:text="Person Name(Delivery Boy)"
            android:textColor="@color/colorPrimaryDark" />

        <com.iprismech.alertnikkiresidence.customviews.CustomEditTextNormal
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@null"
            android:singleLine="true"

            android:text="Mario Speed wagon"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"

            android:background="@color/graylight"></View>

        <com.iprismech.alertnikkiresidence.customviews.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"

            android:text="Mobile Number"
            android:textColor="@color/colorPrimaryDark" />

        <com.iprismech.alertnikkiresidence.customviews.CustomEditTextNormal
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@null"
            android:inputType="number"
            android:maxLength="10"
            android:singleLine="true"
            android:text="000-000-0000"
            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"

            android:background="@color/graylight"></View>

        <com.iprismech.alertnikkiresidence.customviews.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"

            android:layout_marginTop="@dimen/_10sdp"
            android:text="Service Type"
            android:textColor="@color/colorPrimaryDark" />

        <com.iprismech.alertnikkiresidence.customviews.CustomEditTextNormal
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@null"
            android:maxLines="1"
            android:singleLine="true"
            android:text="+3 hours"

            android:textSize="@dimen/_12sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/graylight"></View>
    </LinearLayout>

    <com.iprismech.alertnikkiresidence.customviews.CustomTextViewBold
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/black_corner_bg"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:gravity="center"
        android:text="Notify Gate"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white" />
</RelativeLayout>