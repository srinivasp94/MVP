<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_20sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/white_bg_corner"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"

            >

            <com.iprismech.alertnikkiresidence.customviews.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_20sdp"
                android:text="! Digital Pass!"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"

            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_contact" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="vertical">

                <com.iprismech.alertnikkiresidence.customviews.CustomTextViewBold
                    android:id="@+id/tv_staff_maid_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Petey Cruiser"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <com.iprismech.alertnikkiresidence.customviews.CustomTextViewBold
                    android:id="@+id/tv_maid_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maid"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/ic_movein" />

            <com.iprismech.alertnikkiresidence.customviews.CustomTextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Entry In "
                android:textColor="@color/colorPrimaryDark" />

            <com.iprismech.alertnikkiresidence.customviews.CustomTextViewNormal
                android:id="@+id/tv_maid_staff_entry_in_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="-10:30 am"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/ic_movein" />

            <com.iprismech.alertnikkiresidence.customviews.CustomTextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Out "
                android:textColor="@color/colorPrimaryDark" />

            <com.iprismech.alertnikkiresidence.customviews.CustomTextViewNormal
                android:id="@+id/tv_maid_staff_entry_out_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="-12:00 pm"
                android:textColor="@color/black" />

        </LinearLayout>

        <com.iprismech.alertnikkiresidence.customviews.CustomTextViewNormal
            android:id="@+id/tv_btn_upload_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/red_corner_bg"
            android:gravity="center_horizontal"
            android:padding="@dimen/_7sdp"
            android:text="Upload Picture"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rview_add_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >
        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/bg_grey">

            <com.iprismech.alertnikkiresidence.customviews.CustomEditTextNormal
                android:layout_width="match_parent"
                android:id="@+id/et_comment"
                android:layout_gravity="start"
                android:gravity="start"
                android:layout_height="match_parent"
                android:background="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/blck_bg_bottom_corners"
            android:orientation="horizontal">

            <com.iprismech.alertnikkiresidence.customviews.CustomTextViewNormal
                android:id="@+id/tv_btn_pass_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:padding="@dimen/_10sdp"
                android:text="Cancel"
                android:textColor="@color/white" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp">

            </View>

            <com.iprismech.alertnikkiresidence.customviews.CustomTextViewNormal
                android:id="@+id/tv_btn_pass_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:padding="@dimen/_10sdp"
                android:text="Submit"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>