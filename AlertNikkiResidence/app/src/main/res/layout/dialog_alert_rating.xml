<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_50sdp"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/llview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/_20sdp"
            android:layout_marginTop="34dp"
            android:background="@drawable/white_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <com.iprismech.alertnikkiresidence.customviews.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="Give Rating For Maid !!"
                android:textAlignment="center"
                android:textColor="@color/graydark"
                android:textSize="@dimen/_14sdp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/graylight"></View>

            <RatingBar
                android:id="@+id/give_staff_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stepSize="0.5" />

            <com.iprismech.alertnikkiresidence.customviews.CustomEditTextNormal
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@null"
                android:hint="Enter description about staff"
                android:id="@+id/et_staff_description"
                android:textSize="@dimen/_12sdp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/graydark"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="1">

                <com.iprismech.alertnikkiresidence.customviews.CustomTextViewBold
                    android:id="@+id/tv_not_now_rating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="0.5"
                    android:gravity="center_horizontal"
                    android:text="Not Now" />

                <com.iprismech.alertnikkiresidence.customviews.CustomTextViewBold
                    android:id="@+id/tv_submit_rating"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="0.5"
                    android:background="@drawable/black_corner_bg"
                    android:gravity="center_horizontal|center"
                    android:text="Submit"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>